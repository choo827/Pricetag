{
  "manifest_version": 2,
  "version": "0.1.0",
  "short_name": "PriceTag",
  "name": "PriceTag",
  "description": "Application that can easily exchange money while browsing the web.",
  "icons": {
    "16": "img/favicon.ico",
    "48": "img/logo.png",
    "128": "img/logo.png"
  },
  "browser_action": {
    "default_title": "PriceTag",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.bundle.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.bundle.js"
      ]
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}